<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Annotation par Étoiles</title>
    <style>
        .star {
            font-size: 24px; /* Taille des étoiles */
            color: #ffd700; /* Couleur dorée pour les étoiles */
            cursor: pointer; /* Change le curseur quand on passe la souris */
        }
        .star:hover {
            color: #ffdb58; /* Couleur au survol */
        }
        .rating {
            display: flex; /* Utilise Flexbox pour aligner horizontalement */
            justify-content: center; /* Centre les étoiles horizontalement */
            margin: 10px 0; /* Espace au-dessus et en dessous */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Votre Contenu</h1>
        
        <div class="rating">
            <span class="star" title="1 étoile" data-value="1"><i class="fas fa-star"></i></span>
            <span class="star" title="2 étoiles" data-value="2"><i class="fas fa-star"></i></span>
            <span class="star" title="3 étoiles" data-value="3"><i class="fas fa-star"></i></span>
            <span class="star" title="4 étoiles" data-value="4"><i class="fas fa-star"></i></span>
            <span class="star" title="5 étoiles" data-value="5"><i class="fas fa-star"></i></span>
        </div>
        
        <p id="rating-output">Note : 0 étoiles</p> <!-- Affichage de la note sélectionnée -->
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Script pour gérer la notation par étoiles
        const stars = document.querySelectorAll('.star');
        const output = document.getElementById('rating-output');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const value = star.getAttribute('data-value');
                output.textContent = `Note : ${value} étoiles`;
                
                // Met à jour la couleur des étoiles sélectionnées
                stars.forEach(s => {
                    s.style.color = s.getAttribute('data-value') <= value ? '#ffd700' : '#ccc';
                });
            });
        });
    </script>
</body>
</html>






